@page "/prepareGame"

@inject NavigationManager navigationManager

<div class="@Styles.Container">
    <div class="w-full max-w-3xl flex flex-col">

        <div class="lg:my-3 xl:my-6 text-center">
            <span class="@Styles.Title">
                Prepare game
            </span>
        </div>

        <div class="mt-6 w-full max-w-3xl flex flex-col md:flex-row md:justify-evenly space-y-4 md:space-y-0">

            <div class="flex items-center space-y-1">

                <div class="w-52">
                    <span class="@Styles.SubTitle">

                        Hand size
                    </span>
                </div>

                <input type="number"
                       class="font-semibold block w-full px-2 py-1.5 border border-slate-400 rounded-md text-sm shadow-sm
                          focus:outline-none
                          focus:border-slate-500"
                       @bind="model.HandSize"
                       min="2"
                       max="6" />

            </div>

        </div>

        <div class="flex-1 max-h-40">
        </div>

        <div class="mt-10 flex justify-between space-x-6">
            <button @onclick="@Play" class="bg-slate-700 text-white hover:bg-slate-500 font-semibold outline-none focus:outline-none rounded-xl
                                            w-full p-2 md:p-4 md:text-xl md:text-2xl uppercase outline-none focus:outline-none flex items-center justify-center">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="play w-6 h-6 mr-1">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>


                <span class="ml-1">Play</span>
            </button>

        </div>
    </div>
</div>

@code
{
    private GameOptions model = new GameOptions();

    private void Play() => navigationManager.NavigateTo("play/?handsize=" + model.HandSize);
    
}